{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext", 
    "moduleResolution": "Node", 
    "lib": [ "ESNext", "DOM" ],
    "rootDir": "./src", 
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "dist",
    "strict": true,
  },
  "exclude": [
    "node_modules",
    "./build/**/*.*",
    "./dist/**/*.*",
  ]
}